@using Blog.ViewModels.Admin
@model Blog.ViewModels.Admin.AdminPostagensCriarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Cadastrar Postagem</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        @if (@Model.Erro != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <h5><i class="icon fas fa-ban"></i> Erro!</h5>
                @Model.Erro
            </div>
        }

    <form action="/admin/postagens/criar" method="post">
        <div class="form-group mb-3">
            <label for="titulo">Titulo</label>
            <input id="titulo" name="titulo" type="text" class="form-control">
        </div>
        <div class="form-group mb-3">
            <label for="descricao">Descrição</label>
            <input id="descricao" name="descricao" type="text" class="form-control">
        </div>

        <div class="form-group mb-3">
            <label for="IdAutor">Autor</label>
            <select id="IdAutor" name="IdAutor" class="form-control">
                <option value="">Selecione</option>
                @foreach (AutorAdminPostagens autor in Model.Autores)
                {
                    <option value="@autor.NomeAutor">@autor.NomeAutor</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="IdCategoria">Categoria</label>
            <select id="IdCategoria" name="IdCategoria" class="form-control">
                <option value="">Selecione</option>
                @foreach (CategoriaAdminPostagens categoria in Model.Categorias)
                {
                    <option value="@categoria.IdCategoria">@categoria.NomeCategoria</option>
                }
            </select>
        </div>

        <div class="form-group mb-3">
            <label for="data">Data Publicação</label>
            <input id="data" name="data" type="date" class="form-control">
        </div>

        <div class="form-group mb-3">
            <button type="submit" class="btn btn-primary btn-block">Cadastrar</button>
            <p class="text-center mt-3">
                <a href="/admin/postagens">Cancelar</a>
            </p>
        </div>
    </form>
    </div>
</div>