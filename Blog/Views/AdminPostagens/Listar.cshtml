@using Blog.ViewModels.Admin
@model Blog.ViewModels.Admin.AdminPostagensListarViewModel

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Listagem de Postagens</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <a class="btn btn-primary mb-3" href="/admin/postagens/criar">Criar nova Postagem</a>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Titulo</th>
                    <th>Descricao</th>
                    <th>NomeAutor</th>
                    <th>NomeCategoria</th>
                    <th>DataPublicacao</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (PostagemAdminPostagens postagem in @Model.Postagens)
                {
                <tr>
                    <td>@postagem.Id</td>
                    <td>@postagem.Titulo</td>
                    <td>@postagem.Descricao</td>
                    <td>@postagem.NomeAutor</td>
                    <td>@postagem.NomeCategoria</td>
                    <td>@postagem.DataPublicacao</td>

                    <td>
                        <a class="btn btn-default btn-xs" href="/admin/postagens/editar/@postagem.Id">Editar</a>
                        <a class="btn btn-danger btn-xs" href="/admin/postagens/remover/@postagem.Id">Remover</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>